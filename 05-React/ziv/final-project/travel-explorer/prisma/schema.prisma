generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews        Review[]
  visitedPlaces  VisitedPlace[]
  favorites      Favorite[]
  notes          Note[]
}

model Country {
  id          String   @id
  name        String
  capital     String
  description String
  imageUrl    String
  currency    String
  language    String
  timezone    String
  latitude    Float    
  longitude   Float    

  reviews        Review[]
  visitedPlaces  VisitedPlace[]
  favorites      Favorite[]
  notes          Note[]
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  countryId String
  country   Country @relation(fields: [countryId], references: [id])
}

model VisitedPlace {
  id        String   @id @default(uuid())
  visitDate DateTime
  notes     String?

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  countryId String
  country   Country @relation(fields: [countryId], references: [id])
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  countryId String
  country   Country @relation(fields: [countryId], references: [id])
}

model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  countryId String
  country   Country @relation(fields: [countryId], references: [id])
}

